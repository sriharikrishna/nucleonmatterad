# regular options
OPTFLAGS=   -g3 -fcheck=all -Wall -fbacktrace -Include
FC= gfortran $(OPTFLAGS)
# variable avoids magnetic moment bug in Intel Fortran compilation
OPTFLAGSX=  -g3 -fcheck=all -Wall -fbacktrace -Include
FCX=gfortran $(OPTFLAGSX)
# variable for debug options
OPTFLAGSD=  -g3 -fcheck=all -Wall -fbacktrace -Include
FCD=gfortran $(OPTFLAGSD)

