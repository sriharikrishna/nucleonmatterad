#TAPENADE_HOME = /Users/mattmenickelly/tapenade_src/tapenade_3.15/
TAPENADE_HOME = ~/tapenade_src/tapenade_3.16/
TPN  = ${TAPENADE_HOME}/bin/tapenade

CC = @gcc
FC = @ifort
FFLAGS   = -O2 -r8
#FFLAGS   = -O0 -g -r8
F90FLAGS = $(FFLAGS)

#TARGETS =  nmad nmadv 
TARGETS =  nmadv 
#numCore_d.pre.f nmadv numCore_dv.pre.f

all: info ${TARGETS}

SRC=\
nmmainad.f\
nmmain.f\
nmhnc.f\
nmtbi.f\
nmchain.f\
nmfts.f\
nmsub.f

SRCSUB= sub/eft_pot_r.pre.f\
sub/pot.pre.f\
sub/numrec.pre.f\
sub/dgamma.pre.f

DIFFSIZES.inc: 
	rm -f $@
	cat "      integer, parameter :: nbdirsmax="${VARS} >> $@

OBJSUB= sub/dtime.o sub/headtime.pre.o sub/linpack.pre.o sub/minimi.pre.o sub/numrec.pre.o \
   sub/pot.pre.o sub/eft_pot_r.pre.o sub/dgamma.pre.o isnan_d.o

OBJLBFGS=lbfgs_um/sdrive.pre.o lbfgs_um/lbfgs.o

OBJLBFGSB=Lbfgsb.3.0/driver2.pre.o Lbfgsb.3.0/lbfgsb.o Lbfgsb.3.0/linpack.o Lbfgsb.3.0/blas.o

ifdef BFGSCONST
  OBJLBFGS=${OBJLBFGSB}
endif

info:
	@echo "--- Differeniating with the following options"\
       "CASE="${CASE}\
       "BFGS="${BFGS}\
       "BFGSCONST="${BFGSCONST}\
       "ALL="${ALL}\
       "FULLX="${FULLX}\
       "NUCMAT="${NUCMAT}\
       "CUSTOM_INPUTS="${CUSTOM_INPUTS}\
       "VARS="${VARS}

nmad: numCore_d.pre.o nm.pre.o nucmat.pre.o nmsub.pre.o $(OBJSUB) $(OBJLBFGS)
	${FC} ${FFLAGS} -o $@ $^

nmadv: numCore_dv.pre.o nm.pre.o nucmat.pre.o nmsub.pre.o $(OBJSUB) $(OBJLBFGS) 
	${FC} ${FFLAGS} -o $@ $^

numCore.f: $(SRC) $(SRCSUB)
	@cat $^ > $@ 

VARSTR = "nmmainad(flocal)/(dor,bls,bst,btn,als,al2,als2,ast,atn)"
ifeq ($(VARS),2)
VARSTR = "nmmainad(flocal)/(dor,ast)"
endif
ifeq ($(VARS),4)
VARSTR = "nmmainad(flocal)/(dor,bst,btn,ast)"
endif
ifeq ($(VARS),7)
VARSTR = "nmmainad(flocal)/(dor,bls,bst,btn,als,ast,atn)"
endif

numCore_dv.pre.f: numCore.pre.f
	@echo "--- Generating Tapenade Output: " $(VARSTR) "VARS is" $(VARS) 
	rm -f DIFFSIZES.inc
	@echo "      integer, parameter :: nbdirsmax="${VARS} >> DIFFSIZES.inc
	@${TPN} -forward -vector -head $(VARSTR)  $< 
	@mv numCore.pre_dv.f $@

CPPFLAGS= $(DIFF) $(WFLAGS) -DALLOW_TAPENADE -DALLOW_DATA 
ifdef BFGS
CPPFLAGS+=-DBFGS
endif
ifdef ALL
CPPFLAGS+=-DDO_ALL
endif
ifdef FULLX
CPPFLAGS+=-DDO_FULLX
endif
ifdef NUCMAT
CPPFLAGS+=-DONLY_NUCMAT
endif
ifdef CUSTOM_INPUTS
CPPFLAGS+=-DCUSTOM_INPUTS
endif
ifeq ($(CASE), snm)
  CPPFLAGS+=-DCASE_SNM
else
  CPPFLAGS+=-DCASE_PNM
endif
ifeq ($(VARS),2)
  CPPFLAGS+=-DVARS2
endif
ifeq ($(VARS),4)
  CPPFLAGS+=-DVARS4
endif
ifeq ($(VARS),7)
  CPPFLAGS+=-DVARS7
endif
ifeq ($(VARS),9)
  CPPFLAGS+=-DVARS9
endif

CPPCMD = @cat $< |  cpp  $(CPPFLAGS)  -I../ -I./ -traditional-cpp -P 

%.pre.c: %.c
	$(CPPCMD) > $@

%.pre.f: %.f
	$(CPPCMD) > $@

%.o : %.F
	${FC} ${FFLAGS} -cpp  -o $@ -c $<

%.o : %.f90
	${FC} ${F90FLAGS} -cpp -o $@ -c $< 

%.o : %.f
	@echo "--- Compiling" $<
	${FC} ${F90FLAGS} -cpp -o $@ -c $< 

%.o : %.c
	@echo "--- Compiling" $<
	${CC} -cpp -o $@ -c $< 

#
# transformation rules
#


clean:	
	@/bin/rm -f *.pre.f *.o *.cpp *.msg *.mod numCore.* nclude/*.o nclude/*.mod params_d.f nmad nmadv
	@/bin/rm -f sub/*.pre.f sub/*.o sub/*.cpp sub/*.msg sub/*.mod numCore.* nclude/*.o nclude/*.mod
	@/bin/rm -f lbfgs_um/*.o Lbfgsb.3.0/*.o DIFFSIZES.inc

realclean: clean	
	@/bin/rm -f $(TARGETS)

